<?xml version='1.0' encoding='utf-8'?>
<widget id="com.youngentertainmentmag.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    
    <name>Young Entertainment</name>
    <description>Young Entertainment Magazine brings you news about your favorite young adult books, movies, TV Shows and rising music stars.</description>
    <author email="admin@YoungEntertainmentMag.com" href="http://youngentertainmentmag.com">Young Entertainment Magazine</author>
	<preference name="phonegap-version" value="3.3.0" />
    <feature name="http://api.phonegap.com/1.0/device" />
    
    <preference name="orientation" value="portrait" />       <!-- all: default means both landscape and portrait are enabled -->
    
    <plugin name="org.apache.cordova.device" />
    <plugin name="org.apache.cordova.camera" />
    <plugin name="org.apache.cordova.media-capture" />
    <plugin name="org.apache.cordova.file" />
    <plugin name="org.apache.cordova.file-transfer" />
    <plugin name="org.apache.cordova.splashscreen" />
    <plugin name="org.apache.cordova.contacts" />
    <plugin name="org.apache.cordova.geolocation" />
    <plugin name="org.apache.cordova.inappbrowser" />
    <plugin name="org.apache.cordova.dialogs" />
    <plugin name="org.apache.cordova.vibration" />
    <plugin name="org.apache.cordova.network-information" />
    <plugin name="com.simplec.plugins.localnotification" />

	<icon src="icon.png" />
	
    <icon src="res/icons/ios/Icon.png" platform="ios" width="57" height="57" />
    <icon src="res/icons/ios/Icon@2x.png" platform="ios" width="114" height="114" />    
    <icon src="res/icons/ios/Icon-72.png" platform="ios" width="72" height="72" />
    <icon src="res/icons/ios/Icon-72@2x.png" platform="ios" width="144" height="144" />

    <icon src="res/icons/android/drawable-ldpi/Icon.png" platform="android" density="ldpi" />
    <icon src="res/icons/android/drawable-mdpi/Icon.png" platform="android" density="mdpi" />
    <icon src="res/icons/android/drawable-hdpi/Icon.png" platform="android" density="hdpi" />
    <icon src="res/icons/android/drawable-xdpi/Icon.png" platform="android" density="xhdpi" />
	<icon src="res/icons/android/drawable-xxdpi/Icon.png" platform="android" density="xxhdpi" />
	<icon src="res/icons/android/drawable-xxxdpi/Icon.png" platform="android" density="xxxhdpi" />
	
    <splash src="splash.png" />
    
    <splash src="res/screen/android/drawable-ldpi/splash.png"  platform="android" density="ldpi" />
    <splash src="res/screen/android/drawable-mdpi/splash.png"  platform="android" density="mdpi" />
    <splash src="res/screen/android/drawable-hdpi/splash.png"  platform="android" density="hdpi" />
    <splash src="res/screen/android/drawable-xdpi/splash.png" platform="android" density="xhdpi" />
    
    <splash src="res/screen/ios/Default.png" platform="ios" width="320" height="480" />
    <splash src="res/screen/ios/Default@2x.png" platform="ios" width="680" height="960" />
    <splash src="res/screen/ios/Deafult-568h-2x.png" platform="ios" width="640" height="1136" />

    <content src="http://youngentertainmentmag.com" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
	<access origin="http://youngentertainmentmag.com" subdomains="true"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
